<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee  
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">


	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:/conf/cluster-application-context.xml,classpath:/conf/cluster-snapshot-dao-context.xml,classpath:/conf/terminatorBizDal-dao-context.xml</param-value>
	</context-param>


	<servlet>
		<servlet-name>exportReport</servlet-name>
		<servlet-class>com.taobao.terminator.collect.servlet.FullReportCreateServlet</servlet-class>
	</servlet>
	<!-- <servlet> <servlet-name>dailyReport</servlet-name> <servlet-class>com.taobao.terminator.collect.servlet.DailyReportCreateServlet</servlet-class> 
		</servlet> <servlet-mapping> <servlet-name>dailyReport</servlet-name> <url-pattern>/dailyReport</url-pattern> 
		</servlet-mapping> -->

	<servlet-mapping>
		<servlet-name>exportReport</servlet-name>
		<url-pattern>/export_report</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>monitorServlet</servlet-name>
		<servlet-class>com.dihuo.app.common.monitor.MonitorServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>monitorServlet</servlet-name>
		<url-pattern>/check_health</url-pattern>
	</servlet-mapping>



</web-app>
